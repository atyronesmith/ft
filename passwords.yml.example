# FineTune Secrets Configuration
# Copy this file to passwords.yml and add your actual credentials
# NEVER commit passwords.yml to version control

# API Keys
huggingface:
  token: "hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Your HuggingFace API token

wandb:
  api_key: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"     # Weights & Biases API key

openai:
  api_key: "sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"    # OpenAI API key (optional)

anthropic:
  api_key: "sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"   # Anthropic API key (optional)

# Service Credentials
database:
  username: "finetune_user"
  password: "your_secure_password_here"
  host: "localhost"
  port: 5432
  name: "finetune_db"

redis:
  password: "your_redis_password"
  host: "localhost"
  port: 6379

# Authentication
jwt:
  secret_key: "your-super-secret-jwt-key-change-this-in-production"
  algorithm: "HS256"
  access_token_expire_minutes: 30
  refresh_token_expire_days: 7

# Cloud Storage (optional)
aws:
  access_key_id: "AKIAXXXXXXXXXXXXXXXX"
  secret_access_key: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  region: "us-west-2"
  s3_bucket: "finetune-models"

azure:
  storage_account: "your_storage_account"
  storage_key: "your_storage_key"
  container: "models"

gcp:
  project_id: "your-project-id"
  credentials_path: "/path/to/service-account.json"
  bucket: "finetune-models"

# Monitoring Services (optional)
sentry:
  dsn: "https://xxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx"
  environment: "production"

datadog:
  api_key: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  app_key: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email Configuration (optional)
smtp:
  server: "smtp.gmail.com"
  port: 587
  username: "your-email@gmail.com"
  password: "your-app-specific-password"
  use_tls: true
  from_email: "noreply@finetune.ai"

# Encryption
encryption:
  master_key: "your-256-bit-encryption-key-base64-encoded"

# OAuth Providers (optional)
github:
  client_id: "xxxxxxxxxxxxxxxxxxxx"
  client_secret: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

google:
  client_id: "xxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com"
  client_secret: "xxxxxxxxxxxxxxxxxxxxxxxx"

# Model Registry
model_registry:
  api_key: "your-internal-model-registry-key"
  endpoint: "https://models.internal.company.com"

# Notes:
# - All values in this file should be kept secret
# - Use environment variables for production deployments
# - Consider using a secrets management service (AWS Secrets Manager, HashiCorp Vault, etc.)
# - Rotate keys regularly and use strong, unique passwords
# - Enable 2FA where possible for accounts associated with these credentials
