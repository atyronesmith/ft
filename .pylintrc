[MASTER]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append("src")'

# Files or directories to be skipped
ignore=CVS,.git,__pycache__,build,dist,.venv,venv

# Pickle collected data for later comparisons
persistent=yes

# Use multiple processes to speed up Pylint
jobs=4

[MESSAGES CONTROL]
# Disable the message, report, category or checker with the given id(s)
disable=
    C0111,  # missing-docstring (we'll enable selectively)
    C0103,  # invalid-name (for short variable names like x, y)
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0212,  # protected-access
    W0613,  # unused-argument
    W0622,  # redefined-builtin (for id, type, etc.)
    E1101,  # no-member (false positives with dynamic attributes)
    R0801,  # duplicate-code
    C0301,  # line-too-long (handled by black)
    W0611,  # unused-import (handled by ruff)
    import-error,  # for optional dependencies
    no-name-in-module,  # for optional dependencies

[REPORTS]
# Set the output format
output-format=colorized

# Include message's id in output
include-ids=yes

# Include symbolic ids of messages in output
symbol=yes

# Template for output
msg-template={path}:{line}: [{msg_id}({symbol}), {obj}] {msg}

[BASIC]
# Good variable names
good-names=i,j,k,x,y,z,_,df,ax,fig,lr,id,ok,mx,nn,np,pd,pt,tf

# Regular expression for valid names
variable-rgx=[a-z_][a-z0-9_]{1,30}$
argument-rgx=[a-z_][a-z0-9_]{1,30}$
attr-rgx=[a-z_][a-z0-9_]{1,30}$
function-rgx=[a-z_][a-z0-9_]{2,50}$
method-rgx=[a-z_][a-z0-9_]{2,50}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=1000

# String used as indentation unit
indent-string='    '

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of attributes for a class
max-attributes=20

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

# Maximum number of branch for function / method body
max-branches=12

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of parents for a class
max-parents=7

# Maximum number of public methods for a class
max-public-methods=25

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of statements in function / method body
max-statements=50

# Minimum number of public methods for a class
min-public-methods=0

[IMPORTS]
# Allow wildcard imports from modules
allow-wildcard-with-all=yes

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions=Exception
