# FineTune Environment Variables
# Copy this file to .env and update with your values

# API Keys (Optional)
HUGGINGFACE_TOKEN=your_huggingface_token_here
WANDB_API_KEY=your_wandb_api_key_here

# Paths
FINETUNE_HOME=~/.finetune
MODELS_DIR=${FINETUNE_HOME}/models
DATASETS_DIR=${FINETUNE_HOME}/datasets
CHECKPOINTS_DIR=${FINETUNE_HOME}/checkpoints
CACHE_DIR=${FINETUNE_HOME}/cache

# Model Settings
DEFAULT_MODEL=meta-llama/Llama-2-7b-hf
DEFAULT_QUANTIZATION=4bit
MAX_MODEL_SIZE_GB=32

# Training Settings
DEFAULT_BATCH_SIZE=4
DEFAULT_LEARNING_RATE=2e-4
DEFAULT_NUM_EPOCHS=3
GRADIENT_ACCUMULATION_STEPS=4
MAX_SEQUENCE_LENGTH=2048

# Memory Management
MAX_MEMORY_GB=64
RESERVED_MEMORY_GB=8
ENABLE_GRADIENT_CHECKPOINTING=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# UI Server
UI_HOST=0.0.0.0
UI_PORT=8501
UI_THEME=dark

# Logging
LOG_LEVEL=INFO
LOG_FILE=${FINETUNE_HOME}/logs/finetune.log
ENABLE_TENSORBOARD=true
TENSORBOARD_DIR=${FINETUNE_HOME}/tensorboard

# System
NUM_THREADS=8
USE_MLX=true
FALLBACK_TO_PYTORCH=true
DEVICE=mps  # mps for Apple Silicon, cuda for NVIDIA, cpu for CPU

# Development
DEBUG=false
PROFILE_MEMORY=false
BENCHMARK_MODE=false

# Database
DATABASE_URL=sqlite:///${FINETUNE_HOME}/finetune.db

# Security
ENABLE_AUTH=false
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
